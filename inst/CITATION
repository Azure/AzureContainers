citHeader("To cite package 'AzureContainers' in publications use:")
     
 year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
 vers <- paste("R package version", meta$Version)
 
 citEntry(entry="Manual",
          title = "AzureContainers: An R interface to containers in Azure",
          author = personList(as.person("Hong Ooi")),
          year = year,
          note = vers,
          textVersion =
          paste("Hong Ooi (",
                year,
                "). AzureContainers: An R interface to containers in Azure. ",
                vers, ".", sep=""))
